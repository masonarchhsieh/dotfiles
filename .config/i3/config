# big monitor on HDMI2: 2560x1080
bar {
    output HDMI2
    font pango:mono 10
    position top
    tray_output none
    status_command bumblebee-status -m  brightness traffic cpu memory sensors pasink pasource disk time -t iceberg-rainbow
    colors {
        background #000000
        statusline #ffffff

        focused_workspace #454545 #225577 #ffffff
        inactive_workspace #454545 #212121 #fffff

    }
}

# normal monitor on HDMI1: 1920x1080
bar {
    output HDMI1
    output DP1
    output DP2
    font pango:mono 10
    position top
    tray_output none
    status_command bumblebee-status -m xrandr nic pasink pasource battery datetime -p root.path=/ time.format="%H:%M" date.format="%a, %b %d %Y" -t iceberg-rainbow
}

# only on eDP1
bar {
    output eDP1
    font pango:mono 10
    position top
    tray_output none
    status_command bumblebee-status -m cpu sensors pasink pasource battery datetime -p root.path=/ time.format="%H:%M" date.format="%a, %b %d %Y" -t iceberg-rainbow
}



